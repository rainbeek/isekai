{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "asdf",
    "bundler",
    "github-actions",
    "gradle-wrapper",
    "pub",
    "pyenv",
    "ruby-version"
  ],
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackageNames": ["flutter", "dart"],
      "groupName": "flutter",
      "automerge": true
    },
    {
      "matchManagers": ["bundler"],
      "addLabels": ["ruby"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"],
      "automerge": true
    },
    {
      "matchManagers": ["gradle-wrapper"],
      "addLabels": ["gradle"],
      "automerge": true
    },
    {
      "matchManagers": ["pyenv"],
      "addLabels": ["python"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "cloud_firestore",
        "firebase_analytics",
        "firebase_auth",
        "firebase_core",
        "firebase_remote_config"
      ],
      "groupName": "firebase"
    },
    {
      "matchManagers": ["ruby-version"],
      "addLabels": ["ruby"],
      "automerge": true,
      "semanticCommitType": "dev"
    }
  ]
}
